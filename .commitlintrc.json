{
  "extends": [
    "./node_modules/cz-emoji-conventional"
  ],
  "rules": {
    "header-max-length": [
      0
    ],
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ]
    ],
    "subject-case": [
      2,
      "never",
      [
        "sentence-case",
        "start-case",
        "pascal-case",
        "upper-case"
      ]
    ]
  }
}